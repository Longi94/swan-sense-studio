<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Sensor storage">

        <PreferenceScreen
            android:key="pref_key_storage"
            android:title="Sensor data storage">

            <CheckBoxPreference
                android:defaultValue="false"
                android:key="pref_key_sense"
                android:summary="Use Sense platform as default storage mechanism for sensor data"
                android:title="Off"/>

            <Preference
                android:enabled="false"
                android:key="pref_key_sense_login"
                android:summary="Login to Sense platform"
                android:title="Login">

                <intent
                    android:targetClass="interdroid.sense.LoginActivity"
                    android:targetPackage="interdroid.swan"/>
            </Preference>

            <Preference
                android:enabled="false"
                android:key="pref_key_sense_logout"
                android:summary="Logout from Sense platform"
                android:title="Logout"/>

            <Preference
                android:enabled="false"
                android:key="pref_key_sense_register"
                android:summary="Register to Sense platform"
                android:title="Register">

                <intent
                    android:targetClass="interdroid.sense.RegistrationActivity"
                    android:targetPackage="interdroid.swan"/>
            </Preference>

            <Preference
                android:enabled="false"
                android:key="pref_key_sense_settings"
                android:summary="Sense platform settings"
                android:title="Settings">

                <intent
                    android:targetClass="interdroid.sense.SettingsActivity"
                    android:targetPackage="interdroid.swan"/>
            </Preference>

        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Use Cuckoo for offloading">

        <PreferenceScreen
            android:defaultValue=""
            android:title="Offloading with Cuckoo"
            android:summary="Use Cuckoo for offloading computation or communication intensive tasks">

            <CheckBoxPreference
                android:defaultValue="false"
                android:key="pref_key_cuckoo_on_off"
                android:summary="Use Cuckoo"
                android:title="Off"/>

            <Preference
                android:enabled="false"
                android:key="pref_key_cuckoo"
                android:summary="Manage Cuckoo servers"
                android:title="Cuckoo servers">

                <intent
                    android:targetClass="interdroid.cuckoo.resourcemanager.ResourcesActivity"
                    android:targetPackage="interdroid.swan"/>

            </Preference>
        </PreferenceScreen>

    </PreferenceCategory>

</PreferenceScreen>