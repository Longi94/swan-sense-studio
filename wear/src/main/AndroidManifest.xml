<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wear.interdroid.swan">

    <uses-feature android:name="android.hardware.type.watch" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name="wear.interdroid.swan.MessageReceiverService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <service android:name="wear.interdroid.swan.SensorService" />

        <!--Movement Sensor -->
        <activity
            android:name=".sensors.MovementSensor$ConfigurationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="interdroid.swan.sensor.DISCOVER" />
            </intent-filter>

            <meta-data
                android:name="entityId"
                android:value="movement" />
            <meta-data
                android:name="valuePaths"
                android:value="x,y,z,total" />
            <meta-data
                android:name="accuracy"
                android:value="3" />
            <meta-data
                android:name="delay"
                android:value="200000" />
            <meta-data
                android:name="units"
                android:value="m/s2,m/s2,m/s2,m/s2" />
        </activity>

        <service
            android:name=".sensors.MovementSensor"></service>

        <!-- Wear Gyroscope Sensor-->
        <activity
            android:name=".sensors.GyroscopeSensor$ConfigurationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="interdroid.swan.sensor.DISCOVER" />
            </intent-filter>

            <meta-data
                android:name="entityId"
                android:value="wear_gyroscope" />
            <meta-data
                android:name="valuePaths"
                android:value="x,y,z" />
            <meta-data
                android:name="accuracy"
                android:value="3" />
            <meta-data
                android:name="delay"
                android:value="200000" />
            <meta-data
                android:name="units"
                android:value="Degrees,Degrees,Degrees" />
        </activity>

        <service
            android:name="sensors.GyroscopeSensor"></service>

        <!-- Wear Light sensor-->
        <activity
            android:name="sensors.LightSensor$ConfigurationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="interdroid.swan.sensor.DISCOVER" />
            </intent-filter>

            <meta-data
                android:name="entityId"
                android:value="wear_light" />
            <meta-data
                android:name="valuePaths"
                android:value="lux" />
            <meta-data
                android:name="accuracy"
                android:value="3" />
            <meta-data
                android:name="delay"
                android:value="200000" />
            <meta-data
                android:name="units"
                android:value="lux" />
        </activity>

        <service
            android:name=".sensors.LightSensor"
            android:exported="true"
            android:process=":wearlightsensor"></service>


    </application>


</manifest>
