<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.slavik.evaluationengineapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MovementSensor$ConfigurationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="interdroid.swan.sensor.DISCOVER" />
            </intent-filter>

            <meta-data
                android:name="entityId"
                android:value="movement" />
            <meta-data
                android:name="valuePaths"
                android:value="x,y,z,total" />
            <meta-data
                android:name="accuracy"
                android:value="3" />
            <meta-data
                android:name="delay"
                android:value="200000" />
            <meta-data
                android:name="units"
                android:value="m/s2,m/s2,m/s2,m/s2" />
        </activity>

        <service
            android:name=".MovementSensor"
            android:exported="true"
            android:process=":movementsensor"></service>


        <receiver
            android:name=".MyEvaluationEngineReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="interdroid.swan.REGISTER" />
                <action android:name="interdroid.swan.UNREGISTER" />
                <action android:name="interdroid.swan.NOTIFY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".MyEvaluationEngine"
            android:exported="false" />

    </application>

</manifest>